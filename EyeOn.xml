<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

  	<Frame name="EyeOnMasterFrame" clampedToScreen="true" movable="true" parent="UIParent">

    <Size>
      <AbsDimension x="150" y="44" />
    </Size>

    <Anchors>
      <Anchor point="CENTER" relativeTo="UIParent">
        <Offset>
          <AbsDimension x="150" y="150" />
        </Offset>
      </Anchor>
    </Anchors>

    <Frames>

      <Frame name="$parent_Background" SetAllPoints="true">

        <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
          <BackgroundInsets>
            <AbsInset left="2" right="2" top="2" bottom="2" />
          </BackgroundInsets>
          <TileSize>
            <AbsValue val="12" />
          </TileSize>
          <EdgeSize>
            <AbsValue val="12" />
          </EdgeSize>
          <BorderColor r="0" g="0" b="0" />
        </Backdrop>

      </Frame>

      <Button name="$parent_Header">
        <Size>
          <AbsDimension x="66" y="12"/>
        </Size>
        <Anchors>
          <Anchor point="TOPLEFT">
            <Offset>
              <AbsDimension x="3" y="-4"/>
            </Offset>
          </Anchor>
        </Anchors>
        <Layers>
          <Layer level="OVERLAY">
            <FontString name="$parentFrameTestText" inherits="GameFontNormal" setAllPoints="true" text="EyeOn" />
              <Anchors>
                <Anchor point="TOPLEFT" relativeTo="EyeOnMasterFrame">
                  <Offset>
                    <AbsDimension x="66" y="0"/>
                  </Offset>
                </Anchor>
              </Anchors>
          </Layer>
        </Layers>
        <Scripts>
          <OnMouseDown>
            EYEONMASTERFRAME_G.MouseDown(self:GetParent(), button);
          </OnMouseDown>
          <OnMouseUp>
            EYEONMASTERFRAME_G.MouseUp(self:GetParent(), button);
          </OnMouseUp>
        </Scripts>
      </Button>


      <Button name="$parent_SettingsButton" hidden="false">
        <Size>
          <AbsDimension x="16" y="16"/>
        </Size>
        <Anchors>
          <Anchor point="TOPRIGHT" relativeTo="$parent_Background" relativePoint="TOPRIGHT">
            <Offset>
              <AbsDimension x="-4" y="-1"/>
            </Offset>
          </Anchor>
        </Anchors>
        <NormalTexture file="Interface\AddOns\EyeOn\SettingsIcon"/>
        <HighlightTexture file="Interface\Buttons\UI-Panel-MinimizeButton-Highlight" alphaMode="ADD"/>
        <Scripts>
          <OnClick>
            EYEONMASTERFRAME_G.OptionsToggle();
          </OnClick>
          <OnEnter>
            EYEONMASTERFRAME_G.OptionsButton_Enter(self);
          </OnEnter>
          <OnLeave>
            GameTooltip:Hide();
          </OnLeave>
        </Scripts>
      </Button>
      
      <Frame name="$parent_ResourceFrame">

        <Anchors>
          <Anchor point="TOPLEFT">
            <Offset>
              <AbsDimension x="6" y="-18"/>
            </Offset>
          </Anchor>
          <Anchor point="BOTTOMRIGHT">
            <Offset>
              <AbsDimension x="-6" y="6"/>
            </Offset>
          </Anchor>
        </Anchors>
      </Frame>

      <Frame name="$parent_PlayerFrame">

        <Anchors>
          <Anchor point="TOPLEFT">
            <Offset>
              <AbsDimension x="6" y="-18"/>
            </Offset>
          </Anchor>
          <Anchor point="BOTTOMRIGHT">
            <Offset>
              <AbsDimension x="-6" y="6"/>
            </Offset>
          </Anchor>
        </Anchors>

      </Frame>

    </Frames>

    <Scripts>
      <OnLoad>
        EYEONMASTERFRAME_G.OnLoad(self);
      </OnLoad>
      <OnEvent>
        EYEONMASTERFRAME_G.OnEvent(self, event, ...);
      </OnEvent>
      <OnMouseDown>
        EYEONMASTERFRAME_G.MouseDown(self, button);
      </OnMouseDown>
      <OnMouseUp>
        EYEONMASTERFRAME_G.MouseUp(self, button);
      </OnMouseUp>
    </Scripts>

  </Frame>
</Ui>
